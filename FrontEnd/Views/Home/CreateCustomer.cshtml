@{
    ViewBag.Title = "Create Customer";
}
    <h2>Create Customer</h2>
    <div class="form-group">
        @using (Html.BeginForm("CreateCustomer", "Home", FormMethod.Post))
        {
            <form id="submitForm" action="~/Controllers/HomeController/Create" style="width:500px">
                <fieldset>
                    <div>
                        <br />
                        <div class="form-group row" style="margin-bottom:15px">
                            <label for="inputIDnumber" class="col-md-10" >ID Number</label>
                            <input type="text" class="form-control col-md-6" name="inputIDnumber" placeholder="Please input ID number" required>
                        </div>
                        <div class="form-group row" style="margin-bottom:15px">
                            <label for="inputFirstname" class="col-md-10">First Name</label>
                            <input type="text" class="form-control col-md-6" name="inputFirstname" placeholder="Please input First name" required>
                        </div>
                        <div class="form-group row" style="margin-bottom:15px">
                            <label for="inputlastname" class="col-md-10">First Name</label>
                            <input type="text" class="form-control col-md-6" name="inputlastname" placeholder="Please input Last name" required>
                        </div>
                        <div class="form-group row" style="margin-bottom:15px">
                            <label for="inputCell" class="col-md-10">Mobile Number</label>
                            <input type="text" class="form-control col-md-6" name="inputCell" placeholder="Please input Mobile number" required>
                        </div>
                        <div class="form-group row" style="margin-bottom:15px">
                            <label for="inputEmail" class="col-md-10">Email</label>
                            <input type="text" class="form-control col-md-3" name="inputEmail" placeholder="Please input Email">
                        </div>
                        <label style="color:red">@ViewBag.Message</label>
                    </div>
                </fieldset>
                    <input type="submit" value="Create" class="btn btn-primary js-scroll-trigger col-md-12" />                
            </form>
        }
    </div>
